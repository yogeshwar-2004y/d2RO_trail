    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-pdf-embed": "^2.1.3",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "@vue/test-utils": "^2.4.5",
    "jsdom": "^24.0.0",
    "vitest": "^1.3.1",
    "cypress": "^13.7.0",
    "@cypress/vue": "^6.0.0",
    "mochawesome": "^7.1.3",
