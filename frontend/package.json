{
  "name": "frontend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:unit": "vitest run --reporter=verbose",
    "test:unit:coverage": "vitest run --coverage --reporter=verbose",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:headless": "cypress run --headless --reporter mochawesome --reporter-options reportDir=../reports/frontend/cypress,overwrite=false,html=true,json=true",
    "test:e2e": "npm run cypress:run:headless",
    "test:e2e:open": "npm run cypress:open",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "test:ci": "npm run test:unit:coverage && npm run test:e2e",
    "test:reports": "npm run test:coverage && npm run test:e2e && npm run generate:reports",
    "generate:reports": "node scripts/generate-test-reports.js",
    "clean:reports": "rm -rf ../reports/frontend/*",
    "test:debug": "vitest --inspect-brk --no-coverage"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "docx-preview": "^0.3.6",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "mammoth": "^1.10.0",
    "pdfjs-dist": "^5.4.149",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-pdf-embed": "^2.1.3",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@cypress/vue": "^6.0.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^1.6.1",
    "@vue/test-utils": "^2.4.6",
    "c8": "^9.1.0",
    "cypress": "^15.3.0",
    "jsdom": "^24.1.3",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "vite": "^7.0.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vitest": "^1.6.1"
  }
}
